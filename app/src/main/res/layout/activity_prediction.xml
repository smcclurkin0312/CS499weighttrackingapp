<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PredictionActivity"
    android:background="@color/light_green">

    <!-- Title -->
    <TextView
        android:id="@+id/predictionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prediction_title"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Dropdown for time frame -->
    <Spinner
        android:id="@+id/timeFrameSpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:padding="8dp"
        android:minWidth="150dp"
        app:layout_constraintTop_toBottomOf="@id/predictionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Calculate Prediction Button -->
    <Button
        android:id="@+id/calculatePredictionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate_prediction_button"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/dark_ivy_green"
        app:layout_constraintTop_toBottomOf="@id/timeFrameSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Result Display -->
    <TextView
        android:id="@+id/predictionResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prediction_result_placeholder"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/calculatePredictionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Graph Title -->
    <TextView
        android:id="@+id/graphTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graph_title"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/predictionResultText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- LineChart for Weight Trend -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/weightTrendChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/graphTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>